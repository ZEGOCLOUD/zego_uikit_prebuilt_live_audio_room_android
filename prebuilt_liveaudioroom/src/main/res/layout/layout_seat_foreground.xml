<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="80dp"
  android:layout_height="80dp">

  <FrameLayout
    android:id="@+id/foreground_avatar_place_holder"
    android:layout_width="66dp"
    android:layout_height="66dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <ImageView
      android:id="@+id/foreground_avatar_content_mic"
      android:layout_width="54dp"
      android:layout_height="54dp"
      android:layout_gravity="center"
      android:scaleType="center"
      android:src="@drawable/audioroom_icon_mic_off_for_seat" />
  </FrameLayout>

  <ImageView
    android:id="@+id/foreground_icon_host"
    android:layout_width="39dp"
    android:layout_height="12dp"
    android:layout_gravity="center_horizontal"
    android:layout_marginTop="50dp"
    android:scaleType="center"
    android:src="@drawable/audioroom_icon_user_signage"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="@id/foreground_avatar_place_holder" />

  <TextView
    android:id="@+id/foreground_user_name"
    android:layout_width="match_parent"
    android:layout_height="14dp"
    android:ellipsize="end"
    android:gravity="center"
    android:maxLines="1"
    android:paddingStart="4dp"
    android:paddingEnd="4dp"
    android:textColor="@color/black"
    android:textSize="10sp"
    app:layout_constraintTop_toBottomOf="@+id/foreground_avatar_place_holder" />

</androidx.constraintlayout.widget.ConstraintLayout>